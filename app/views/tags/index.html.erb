<h1>Tags <%= link_to "+", new_tag_path, data: { keybinding: 'n' } %></h1>

<table class="table">
  <thead>
    <th>Name</th>
    <th>Task count</th>
    <% if current_user.admin? %>
      <th>User</th>
    <% end %>
    <th colspan='2' class="col-md-2"></td>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.tasks.count %></td>
        <% if current_user.admin? %>
          <td><%= tag.user.username %>
        <% end %>
        <td>
          <div class="btn-container">
            <%= edit_btn edit_tag_path(tag) %>
            <%= delete_btn tag_path(tag) %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
