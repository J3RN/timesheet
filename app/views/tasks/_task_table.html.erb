<table class="table">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Project</th>
      <th>Task name</th>
      <th>Time used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= task.project.customer.company %></td>
        <td><%= task.project.project_name %></td>
        <td><%= task.task_name %></td>
        <td><%= task.percent_time_used.round %>%</td>
        <td>
          <%= form_for task do |f| %>
            <%= f.hidden_field :archived, value: true %>
            <%= f.submit 'Archive', class: "btn btn-default" %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
