<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Task name</th>
      <th>Time used</th>
      <% if current_user.admin? %>
        <th>User</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td class="swatch priority<%= task.priority %>"></td>
        <td><%= task.task_name %> - <%= task.tags.pluck(:name).join(", ") %></td>
        <td><%= task.percent_time_used.round %>%</td>
        <% if current_user.admin? %>
          <td><%= task.user.username %></td>
        <% end %>
        <td>
          <%= form_for task do |f| %>
            <%= f.hidden_field :archived, value: !task.archived %>
            <%= f.submit (task.archived ? 'Unarchive' : 'Archive'), class: "btn btn-default" %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-default' %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
