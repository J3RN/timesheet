<%= form_for(@time_entry) do |f| %>
  <% if @time_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_entry.errors.count, "error") %> prohibited this time_entry from being saved:</h2>

      <ul>
      <% @time_entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-md-4">
    <%= f.label :task_id %><br>
    <%= f.select :task_id, @tasks %>
  </div>
  <div class="field col-md-4">
    <%= f.label :running %><br />
    <%= f.check_box :running %>
  </div>
  <div class="field col-md-4">
    <%= f.label :duration, "Duration (only if historical, in minutes)" %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="field col-md-4">
    <%= f.label :goal %><br>
    <%= f.text_field :goal %>
  </div>
  <div class="field col-md-4">
    <%= f.label :result %><br>
    <%= f.text_field :result %>
  </div>
  <div class="field col-md-4">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="actions col-xs-12">
    <%= f.submit %>
  </div>
<% end %>
